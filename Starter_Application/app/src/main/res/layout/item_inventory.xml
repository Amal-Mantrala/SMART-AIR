<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D2D2D"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textDosesLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doses Left: 150/200"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/textExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires: 12/2025"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert: Low on doses!"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textlastUpdatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last updated by: Parent"
            android:textSize="14sp"
            android:textColor="#888888"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>