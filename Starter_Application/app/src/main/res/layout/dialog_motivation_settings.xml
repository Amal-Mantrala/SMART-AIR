<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:background="@drawable/dialog_rounded_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motivation_settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="20dp" />

        <!-- Streak Thresholds Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/streak_thresholds"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="12dp" />

        <!-- Controller Streak Threshold -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/controller_streak_threshold"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editControllerStreakThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/days"
            android:inputType="number"
            android:text="7"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Technique Streak Threshold -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/technique_streak_threshold"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editTechniqueStreakThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/days"
            android:inputType="number"
            android:text="5"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="20dp" />

        <!-- Badge Thresholds Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/badge_thresholds"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Perfect Controller Week -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfect_controller_week_days"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editPerfectWeekDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/days"
            android:inputType="number"
            android:text="7"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Technique Master Sessions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/technique_master_sessions"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editTechniqueSessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sessions"
            android:inputType="number"
            android:text="10"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Low Rescue Month Limit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_rescue_month_limit"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editLowRescueLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_rescue_days"
            android:inputType="number"
            android:text="4"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Low Rescue Tracking Period -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_rescue_tracking_period"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editLowRescuePeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/days"
            android:inputType="number"
            android:text="30"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="20dp" />

        <!-- Notification Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:id="@+id/checkStreakNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/streak_notifications"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkBadgeNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/badge_notifications"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkWeeklyProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekly_progress_notifications"
            android:checked="true"
            android:layout_marginBottom="20dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="#8E7CFF"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_settings"
                android:textSize="16sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>