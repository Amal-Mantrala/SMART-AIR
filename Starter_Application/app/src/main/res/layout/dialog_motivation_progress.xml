<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:background="@drawable/dialog_rounded_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motivation_progress"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="20dp" />

        <!-- Streaks Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_streaks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="12dp" />

        <!-- Controller Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†"
                    android:textSize="32sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/controller_streak"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textControllerStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 days"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textControllerBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best: 0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Technique Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§˜â€â™€ï¸"
                    android:textSize="32sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/technique_streak"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textTechniqueStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 days"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textTechniqueBest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best: 0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Badges Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/badges_earned"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Badges Container -->
        <LinearLayout
            android:id="@+id/layoutBadges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="100dp">
            
            <!-- Empty state message -->
            <TextView
                android:id="@+id/textNoBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading badges..."
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Settings Button -->
        <Button
            android:id="@+id/buttonMotivationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/motivation_settings"
            android:textSize="17sp"
            android:background="@drawable/btn_signin"
            android:textColor="@android:color/white"
            android:paddingVertical="14dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textSize="16sp"
            android:textColor="#8E7CFF"
            android:background="@android:color/transparent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>