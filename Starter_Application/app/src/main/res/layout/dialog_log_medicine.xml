<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:background="@drawable/dialog_rounded_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_medicine"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_type"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupMedicineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioRescue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rescue_inhaler"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioController"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/controller_medicine"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editMedicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/medicine_name_hint"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dosage_puffs"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dosage_hint"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/before_after_dose"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupEffectiveness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioBetter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/better"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioSame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/same"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioWorse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/worse"
                android:textSize="14sp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutRescueDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symptoms_rescue"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkWheezing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/wheezing" />

                <CheckBox
                    android:id="@+id/checkCoughing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/coughing" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkShortBreath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/short_breath" />

                <CheckBox
                    android:id="@+id/checkChestTight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chest_tightness" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/severity_scale"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekBarSeverity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="4"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textSeverityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:minHeight="44dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notes"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/notes_hint"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="#8E7CFF"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_log"
                android:textSize="16sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>