<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/textChildHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_homepage"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, welcome to your asthma management dashboard!"
        android:textSize="17sp"
        android:textColor="#E0E0E0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textChildHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_health_info"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonLogMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_medicine"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#45B549"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonLogSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_symptoms"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF8C00"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonDailyCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daily_checkin"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#1E88E5"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_history"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#8E24AA"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonMotivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_progress"
                android:textSize="17sp"
                android:textColor="#1A1A1A"
                android:backgroundTint="#FFC107"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonTechniqueHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§˜â€â™€ï¸ Technique Helper"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#00ACC1"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonMyInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¨ My Inhalers"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#7B1FA2"
                android:paddingVertical="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonTriage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/having_trouble_breathing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#E53935"
                android:paddingVertical="18dp"
                android:layout_marginBottom="20dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone: "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D2D"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/textZoneDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2D2D2D" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buttonInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/information"
                android:textSize="17sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonEnterPef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Enter PEF"
                android:textSize="17sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/details"
                android:textSize="17sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/buttonSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sign_out"
                android:textSize="17sp"
                android:background="@drawable/btn_signin"
                android:textColor="@android:color/white"
                android:paddingVertical="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>