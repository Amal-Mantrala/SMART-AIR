<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textChildHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_homepage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, welcome to your asthma management dashboard!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textChildHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/layoutLoggingButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_health_info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonLogMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_medicine"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/buttonLogSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_symptoms"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/buttonDailyCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_checkin"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/buttonViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_history"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#9C27B0" />

        <Button
            android:id="@+id/buttonTriage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/having_trouble_breathing"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F44336"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textZoneDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Zone: --"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutLoggingButtons" />

    <Button
        android:id="@+id/buttonInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="8dp"
        android:text="@string/information"
        app:layout_constraintTop_toBottomOf="@+id/textZoneDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonEnterPef"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Enter PEF"
        app:layout_constraintTop_toBottomOf="@+id/buttonInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="@string/details"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnterPef"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="@string/sign_out"
        app:layout_constraintTop_toBottomOf="@+id/buttonDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
