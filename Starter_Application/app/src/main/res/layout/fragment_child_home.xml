<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textChildHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_homepage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, welcome to your asthma management dashboard!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textChildHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_health_info"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/buttonLogMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_medicine"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/buttonLogSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_symptoms"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/buttonDailyCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daily_checkin"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/buttonViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_history"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#9C27B0" />

            <Button
                android:id="@+id/buttonTechniqueHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technique Helper"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/buttonTriage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/having_trouble_breathing"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#F44336"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textZoneDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Zone: --"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buttonInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/information" />

            <Button
                android:id="@+id/buttonEnterPef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Enter PEF" />

            <Button
                android:id="@+id/buttonDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/details" />

            <Button
                android:id="@+id/buttonSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/sign_out" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>