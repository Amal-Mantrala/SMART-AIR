<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textParentHistoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Child Health History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/layoutFilters"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textParentHistoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Symptoms"/>

        <Spinner
            android:id="@+id/spinnerSymptomsFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Triggers"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerTriggersFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonSelectDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date Range"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonApplyFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewParentHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layoutFilters"
        app:layout_constraintBottom_toTopOf="@+id/buttonBackParent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textEmptyViewParent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No results match your filters."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewParentHistory"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewParentHistory"
        app:layout_constraintStart_toStartOf="@id/recyclerViewParentHistory"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewParentHistory"/>

    <Button
        android:id="@+id/buttonBackParent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#999999"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonExportPdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonExportPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Export as PDF"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#673AB7"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
